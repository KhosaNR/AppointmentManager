@page "/Test"
@using BlazorserverApp.Pages
@model TestModel
<div class="input-group input-group-sm mb-3">
    <div class="input-group-prepend">
        <span class="input-group-text" id="inputGroup-sizing-sm">Small</span>
    </div>
    <input type="text" onkeypress="@Model.TestMethod" class="form-control" aria-label="Sizing example input" aria-describedby="inputGroup-sizing-sm">
</div>
@for (var i = 0; i < 4; i++)
{
    <p>
        <button onclick="@Model.ReportPointerLocation">
            Where's my mouse pointer for this button?
        </button>
    </p>
}

<p>@Model.mousePointerMessage</p>


